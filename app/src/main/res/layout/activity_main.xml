<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="cin.ufpe.br.main.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textTime"
        android:text="@string/time" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textBattery"
        android:text="@string/battery"
        android:layout_below="@id/textTime"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textStatus"
        android:layout_marginBottom="10dp"
        android:text="@string/status"
        android:layout_below="@id/textBattery"/>

    <ImageView
        android:background="@android:color/black"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:srcCompat="@android:color/background_dark"
        android:contentDescription="@string/hideDescription"
        android:id="@+id/imageView"
        android:layout_below="@+id/textStatus"

        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_above="@+id/btnHide" />

    <TextView
        android:text="Selecione a foto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/selecionarFoto"
        android:layout_above="@+id/spinnerPhoto"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:text="@string/hide"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnHide"
        android:layout_marginBottom="12dp"
        android:layout_above="@+id/selecionarFoto"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <EditText
        android:inputType="number"
        android:hint="Sample Size"
        android:background="@drawable/box"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:id="@+id/etO"
        android:layout_alignBottom="@+id/btnHide"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="27dp"
        android:layout_marginStart="27dp" />

    <Spinner
        android:layout_width="wrap_content"
        android:id="@+id/spinnerPhoto"
        android:layout_height="wrap_content"
        android:layout_above="@+id/spinnerAlg"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="10dp" />

    <TextView
        android:text="Selecione o algoritmo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/SelecionarAlgoritmo"
        android:layout_above="@+id/spinnerPhoto"
        android:layout_alignRight="@+id/etO"
        android:layout_alignEnd="@+id/etO" />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/spinnerAlg"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/SelecionarAlgoritmo"
        android:layout_alignStart="@+id/SelecionarAlgoritmo" />

</RelativeLayout>
