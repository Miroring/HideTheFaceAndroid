<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="cin.ufpe.br.main.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textTime"
        android:text="@string/time" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textBattery"
        android:text="@string/battery"
        android:layout_below="@id/textTime"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textStatus"
        android:layout_marginBottom="10dp"
        android:text="@string/status"
        android:layout_below="@id/textBattery"/>

    <ImageView
        android:background="@android:color/black"
        android:layout_width="match_parent"

        android:layout_height="wrap_content"
        app:srcCompat="@android:color/background_light"
        android:contentDescription="@string/hideDescription"
        android:id="@+id/imageView"
        android:layout_below="@+id/textStatus"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_above="@+id/btnHide" />


    <Button
        android:text="@string/hide"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnHide"
        android:layout_above="@+id/selecionarFoto"
        android:layout_centerHorizontal="true"
        />

    <Spinner
        android:layout_width="wrap_content"
        android:id="@+id/spinnerPhoto"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        />

    <TextView
        android:text="Selecione a foto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/selecionarFoto"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_above="@+id/spinnerPhoto"
        android:layout_marginBottom="5dp" />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/spinnerAlg"
        android:layout_alignBottom="@id/spinnerPhoto"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        />

    <TextView
        android:text="Selecione o algoritmo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/SelecionarAlgoritmo"
        android:layout_above="@id/spinnerAlg"
        android:layout_alignBottom="@+id/selecionarFoto"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <RadioButton
        android:text="Executar na nuvem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/textTime"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/RBnuvem"
        android:layout_alignLeft="@+id/RBlocal"
        android:layout_alignStart="@+id/RBlocal"
        android:onClick="onRadioButtonClicked"/>

    <RadioButton
        android:text="Executar localmente"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/textStatus"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_below="@id/RBnuvem"
        android:id="@+id/RBlocal"
        android:onClick="onRadioButtonClicked"/>


</RelativeLayout>
