<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="cin.ufpe.br.main.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textTime"
        android:text="@string/time" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textBattery"
        android:text="@string/battery"
        android:layout_below="@id/textTime"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textStatus"
        android:layout_marginBottom="10dp"
        android:text="@string/status"
        android:layout_below="@id/textBattery"/>

    <EditText
        android:text="1"
        android:inputType="number"
        android:background="@drawable/box"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="105dp"
        android:id="@+id/etO"
        android:layout_marginLeft="14dp"
        android:layout_marginStart="14dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/etLabel"
        android:layout_alignLeft="@id/etO"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:text="sample size"
        android:layout_above="@id/etO"/>

    <Button
        android:text="@string/hide"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnHide"
        android:layout_alignBaseline="@+id/etO"
        android:layout_alignBottom="@+id/etO"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/spinnerAlg"
        android:layout_alignRight="@id/etO"
        android:layout_marginBottom="54dp"
        android:layout_alignParentBottom="true" />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/spinnerPhoto"
        android:layout_alignRight="@id/btnHide"
        android:layout_marginBottom="54dp"
        android:layout_alignParentBottom="true" />

    <ImageView
        android:background="@drawable/box"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:srcCompat="@android:color/background_dark"
        android:contentDescription="@string/hideDescription"
        android:id="@+id/imageView"
        android:layout_below="@+id/textStatus"
        android:layout_above="@id/etLabel"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        />


</RelativeLayout>
